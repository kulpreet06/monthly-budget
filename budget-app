<body>

<h1>ðŸ’— Monthly Budget ðŸ’—</h1>

<div class="container">

  <div class="card">
    <h2>Income & Budget</h2>

    <label>Monthly Income (Â£)</label>
    <input type="number" id="income" value="350">

    <label>Fixed Costs (Â£)</label>
    <input type="number" id="fixed" value="50">

    <label>Savings (Â£)</label>
    <input type="number" id="savings" value="30">

    <button onclick="updateBudget()">Update</button>

    <canvas id="chart"></canvas>
  </div>

  <div class="card">
    <h2>Fixed Costs</h2>
    <ul id="fixedList">
      <li><input type="checkbox" onclick="togglePaid(this)"> Phone Bill</li>
      <li><input type="checkbox" onclick="togglePaid(this)"> Lenses</li>
    </ul>

    <h2>Savings</h2>
    <ul>
      <li><input type="checkbox" onclick="togglePaid(this)"> Savings Sent</li>
    </ul>

    <h2>Disposable / Wishlist</h2>
    <ul id="wishList"></ul>

    <input type="text" id="wishInput" placeholder="Add wishlist item">
    <button onclick="addWish()">Add</button>
  </div>

</div>

<script>
  let chart;

  function updateBudget() {
    const income = Number(document.getElementById("income").value);
    const fixed = Number(document.getElementById("fixed").value);
    const savings = Number(document.getElementById("savings").value);
    const disposable = income - fixed - savings;

    if (chart) chart.destroy();

    chart = new Chart(document.getElementById("chart"), {
      type: "pie",
      data: {
        labels: ["Fixed", "Savings", "Disposable"],
        datasets: [{
          data: [fixed, savings, disposable],
          backgroundColor: ["#ffb3c6", "#f783ac", "#faa2c1"]
        }]
      }
    });
  }

  function togglePaid(cb) {
    cb.parentElement.classList.toggle("paid");
  }

  function addWish() {
    const input = document.getElementById("wishInput");
    if (!input.value) return;

    const li = document.createElement("li");
    li.textContent = input.value;
    document.getElementById("wishList").appendChild(li);
    input.value = "";
  }

  updateBudget();
</script>

